<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/elevation_card_hblist_margin"
    app:cardCornerRadius="5dp"
    android:id="@+id/hblist_item"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/likelist_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@mipmap/ic_inithead"
            app:civ_border_color="#fff" />

        <RelativeLayout
            android:id="@+id/likelist_text_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_toRightOf="@id/likelist_head" >

            <TextView
                android:id="@+id/likelist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明是否了解了"
                android:layout_marginLeft="10dp"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/likelist_age"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@id/likelist_name"
                android:layout_alignLeft="@id/likelist_name"
                android:layout_marginTop="5dp"
                android:text="16"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/likelist_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/likelist_age"
                android:layout_toRightOf="@id/likelist_age"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="河南师范大学"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/likelist_chat_bt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:focusable="false"
            android:clickable="true"
            android:visibility="gone"
            android:src="@mipmap/ic_chatwithlike" />

    </RelativeLayout>
</android.support.v7.widget.CardView>