<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/toolbar_normal_layout"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/headimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:src="@mipmap/ic_head" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />


            <RelativeLayout
                android:id="@+id/nameparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="昵称"
                    android:textColor="@color/it_matchnormal_textcolor"
                    android:textSize="@dimen/normal_textsize" />

                <EditText
                    android:id="@+id/nametext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setafterregistermarginlift"
                    android:background="@color/white"
                    android:hint="输入昵称"
                    android:maxLength="10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view_module" />

            <RelativeLayout
                android:id="@+id/sexparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layoutclick_style"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/match_sextext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="性别"
                    android:textColor="@color/it_matchnormal_textcolor"
                    android:textSize="@dimen/normal_textsize" />

                <TextView
                    android:id="@+id/sextext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/setafterregistermarginlift"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view_module" />

            <RelativeLayout
                android:id="@+id/birthdayparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layoutclick_style"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/match_birthdaytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="生日"
                    android:textColor="@color/it_matchnormal_textcolor"
                    android:textSize="@dimen/normal_textsize" />

                <TextView
                    android:id="@+id/birthdaytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/setafterregistermarginlift"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view_module" />


            <RelativeLayout
                android:id="@+id/homeparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layoutclick_style"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/match_hometext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="家乡"
                    android:textColor="@color/it_matchnormal_textcolor"
                    android:textSize="@dimen/normal_textsize" />

                <TextView
                    android:id="@+id/hometext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/setafterregistermarginlift"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/view_module" />


            <RelativeLayout
                android:id="@+id/statusparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layoutclick_style"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/match_statustext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="恋爱状态"
                    android:textColor="@color/it_matchnormal_textcolor"
                    android:textSize="@dimen/normal_textsize" />

                <TextView
                    android:id="@+id/statustext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/setafterregistermarginlift"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#66000000" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/okbut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:background="@color/primary"
                android:text="完成"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>